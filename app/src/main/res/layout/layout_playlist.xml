                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:textSize="16sp">

                    <TextView
                        android:id="@+id/text_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/song"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="@id/song_detail_1"
                        app:layout_constraintTop_toTopOf="@id/song_detail_1" />

                    <TextView
                        android:id="@+id/song_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4:05"
                        android:textColor="@color/detail"
                        app:layout_constraintStart_toStartOf="@id/song_detail_1"
                        app:layout_constraintTop_toBottomOf="@id/text_song" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_play_1"
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/ic_baseline_play_arrow_24"
                        app:layout_constraintEnd_toStartOf="@id/button_more_vert"
                        app:layout_constraintTop_toTopOf="@id/song_detail_1" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_more_vert"
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/ic_baseline_more_vert_24"
                        app:layout_constraintEnd_toEndOf="@id/song_detail_1"
                        app:layout_constraintTop_toTopOf="@id/song_detail_1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

